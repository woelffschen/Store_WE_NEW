<h1>Wishlist</h1>

<% if @wishlist.empty? %>
    <p>Your wishlist is currently empty.</p>
<% else %>
    <h3><%= link_to 'Empty your Wishlist', wishlist_clear_path %></h3>
<% end %>

<br><br>


<div class="row">

  <% @wishlist.each do | id, quantity | %>

      <div class="col-sm-4 col-md-4">
        <div class="thumbnail">

          <% article = Article.find_by_id(id) %>

          <ul>
            <h3><%= link_to article.title, article %></h3>
            <p> Description: <%= article.description %></p>
            <p> <%= image_tag(article.image_url, :class => "img-responsive", :size => "150x50")%> </p>
            <p> Price: <%= number_to_currency(article.price, :unit => 'â‚¬') %> </p>
            <p> <a href="/cart/<%=article.id%>" class="btn btn-primary" role="button"> Add to cart</a>
          </ul>

        </div>
      </div>
  <% end %>

</div>

<br>

<h3><%= link_to 'Back to articles', articles_path %></h3>

