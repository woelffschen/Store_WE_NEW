<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @articles.each do |article| %>
<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= article.title %></small></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for @order_item, remote: true do |f| %>
          <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency article.price %></span></h4>
          <div class="input-group">
            <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
            <div class="input-group-btn">
              <%= f.hidden_field :article_id, value: article.id %>
              <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            </div>
          </div>
      <% end %>
    </div>

  </div>
</div>
<% end %>
</div>
</div>





<h1>Listing Articles</h1>


  <div class="row">
    <% @articles.each do |article| %>

        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <td><%= image_tag(article.image_url, :class => "img-responsive") %></td>
            <div class="caption">
              <h3><%= link_to article.title, article %></h3>
              <p><%= truncate(strip_tags(article.description))%></p>
              <p><a href="#" class="btn btn-primary" role="button">Add to Cart</a> <%= link_to "Add to Cart" %> </p>
              <p>
                <% if current_user.try(:admin?) %>
                <%= link_to 'Edit', edit_article_path(article) %>
                <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
  </div>

<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New Article', new_article_path %>
<% end %>