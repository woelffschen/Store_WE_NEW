  </div>

  <div class="field">
    <%= f.label :category_id %><br>
    <%= select_tag(:category_id, options_for_select(@categories)) %>
  </div>

  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :colour %><br>
    <%= f.select :colour, Article.colours.keys %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.select :size, Article.sizes.keys %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
